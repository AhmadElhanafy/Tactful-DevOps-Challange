# -------------------------
# 1. BUILD STAGE
# -------------------------
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

WORKDIR /src

# Copy csproj first to leverage Docker layer caching
COPY *.csproj ./
RUN dotnet restore

# Copy the rest of the source code
COPY . ./

# Publish
RUN dotnet publish -c Release -o /app/publish --no-restore


# -------------------------
# 2. RUNTIME STAGE
# -------------------------
FROM mcr.microsoft.com/dotnet/runtime:7.0 AS final

# Create a non-root user (uid 1000)
RUN adduser --disabled-password --home /app workeruser

WORKDIR /app

# Copy published output from build stage
COPY --from=build /app/publish /app/

# Change ownership to non-root user
RUN chown -R workeruser:workeruser /app

# Drop to non-root user
USER workeruser

# (Optional) Hardening - run container with read-only filesystem

ENTRYPOINT ["dotnet", "Worker.dll"]
